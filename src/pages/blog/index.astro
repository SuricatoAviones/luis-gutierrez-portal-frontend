---
// src/pages/blog/index.astro
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/ui/NavBar.astro';
import Footer from '@/components/ui/Footer.astro';
import { getPosts, getCategories, getFeaturedImage, stripHtml } from '@/lib/wordpress';
import type { WPPost } from '@/lib/wordpress';

// Paginación básica — puedes evolucionar esto con query params
const PER_PAGE = 9;
const page = Number(Astro.url.searchParams.get('page') ?? '1');

let posts: WPPost[] = [];
let categories = [];

try {
  [posts, categories] = await Promise.all([
    getPosts(PER_PAGE, page),
    getCategories(),
  ]);
} catch {
  // Fallback vacío; muestra mensaje de carga pendiente
}

function formatPostDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Post principal (featured) = primer post
const featured = posts[0];
const rest = posts.slice(1);
---

<Layout
  title="Blog · Luis Angel Gutierrez"
  description="Artículos sobre desarrollo Full Stack, arquitectura web, JavaScript, React, Node.js y más."
>
  <Navbar slot="nav" />

  <!-- Hero del blog -->
  <section class="pt-16 pb-12 border-b border-border">
    <div class="max-w-content mx-auto px-6 lg:px-10 py-16">
      <div class="flex items-center gap-4 mb-6">
        <span class="block w-8 h-px bg-accent"></span>
        <span class="font-mono text-xs text-accent uppercase tracking-widest">Blog</span>
      </div>
      <h1 class="font-display text-5xl lg:text-6xl font-bold text-ink leading-tight">
        Notas sobre<br /><em class="text-accent font-normal italic">desarrollo</em>
      </h1>
      <p class="mt-5 max-w-lg text-muted text-lg font-light">
        Artículos sobre lo que aprendo, experimento y construyo como desarrollador Full Stack.
      </p>
    </div>
  </section>

  <div class="max-w-content mx-auto px-6 lg:px-10 py-16">

    {/* Post destacado */}
    {featured && (
      <div class="mb-16">
        <a
          href={`/blog/${featured.slug}`}
          class="group grid grid-cols-1 lg:grid-cols-2 gap-0 bg-parchment border border-border rounded-2xl overflow-hidden hover:border-accent/40 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
        >
          <!-- Imagen -->
          <div class="relative aspect-video lg:aspect-auto bg-accent-light overflow-hidden">
            {getFeaturedImage(featured) ? (
              <img
                src={getFeaturedImage(featured)}
                alt={featured.title.rendered}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <span class="font-display text-7xl font-bold text-accent/20">
                  {featured.title.rendered.charAt(0)}
                </span>
              </div>
            )}
            <span class="absolute top-4 left-4 font-mono text-2xs uppercase tracking-wider bg-accent text-parchment px-3 py-1 rounded-full">
              Destacado
            </span>
          </div>
          <!-- Contenido -->
          <div class="p-8 lg:p-10 flex flex-col justify-center">
            <p class="font-mono text-2xs text-muted uppercase tracking-wider mb-4">
              {formatPostDate(featured.date)}
            </p>
            <h2 class="font-display text-2xl lg:text-3xl font-semibold text-ink leading-snug mb-4 group-hover:text-accent transition-colors">
              {featured.title.rendered}
            </h2>
            <p class="text-muted leading-relaxed line-clamp-3 mb-6">
              {stripHtml(featured.excerpt.rendered)}
            </p>
            <span class="inline-flex items-center gap-2 text-sm font-medium text-accent">
              Leer artículo
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>
      </div>
    )}

    {/* Resto de posts */}
    {rest.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {rest.map((post) => {
          const img = getFeaturedImage(post);
          const excerpt = stripHtml(post.excerpt.rendered);
          return (
            <a
              href={`/blog/${post.slug}`}
              class="group flex flex-col bg-parchment border border-border rounded-2xl overflow-hidden hover:border-accent/40 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 reveal"
            >
              <div class="relative aspect-video bg-accent-light overflow-hidden">
                {img ? (
                  <img
                    src={img}
                    alt={post.title.rendered}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <span class="font-display text-4xl font-bold text-accent/20">
                      {post.title.rendered.charAt(0)}
                    </span>
                  </div>
                )}
              </div>
              <div class="flex flex-col flex-1 p-5">
                <p class="font-mono text-2xs text-muted uppercase tracking-wider mb-3">
                  {formatPostDate(post.date)}
                </p>
                <h3 class="font-display text-lg font-semibold text-ink leading-snug mb-3 group-hover:text-accent transition-colors line-clamp-2">
                  {post.title.rendered}
                </h3>
                <p class="text-sm text-muted leading-relaxed flex-1 line-clamp-3">
                  {excerpt}
                </p>
                <div class="mt-4 pt-4 border-t border-border flex items-center justify-between">
                  <span class="text-xs font-medium text-accent">Leer más</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-accent transition-transform duration-200 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    )}

    {/* Sin posts */}
    {posts.length === 0 && (
      <div class="text-center py-20">
        <p class="font-display text-2xl text-muted">Próximamente...</p>
        <p class="text-sm text-muted mt-2">Los artículos se cargarán desde WordPress.</p>
      </div>
    )}

    <!-- Paginación -->
    {posts.length === PER_PAGE && (
      <div class="mt-16 flex items-center justify-center gap-4">
        {page > 1 && (
          <a
            href={`/blog?page=${page - 1}`}
            class="px-5 py-2 border border-border text-sm text-muted hover:border-ink hover:text-ink rounded-full transition-colors"
          >
            ← Anterior
          </a>
        )}
        <span class="font-mono text-sm text-muted">Página {page}</span>
        <a
          href={`/blog?page=${page + 1}`}
          class="px-5 py-2 border border-border text-sm text-muted hover:border-ink hover:text-ink rounded-full transition-colors"
        >
          Siguiente →
        </a>
      </div>
    )}

  </div>

  <Footer slot="footer" />
</Layout>